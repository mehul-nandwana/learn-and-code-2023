

[*]
charset = utf-8

[*.cs]
indent_style = space
indent_size = 4

insert_final_newline = true

trim_trailing_whitespace = true

max_line_length = 120


csharp_preserve_single_line_blocks = false
csharp_preserve_single_line_statements = false

csharp_space_before_open_square_bracket = false
csharp_space_after_open_square_bracket = false
csharp_space_before_close_square_bracket = false
csharp_space_before_open_paren = false
csharp_space_after_open_paren = false
csharp_space_before_close_paren = false
csharp_space_after_comma = true
csharp_space_after_semicolon = true
csharp_space_around_binary_operators = true
csharp_space_around_assignment_operators = true
csharp_space_after_colon_in_base_type_declaration = true
